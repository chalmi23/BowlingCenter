<Window x:Class="BowlingCenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:BowlingCenter.ViewModels"
        xmlns:views="clr-namespace:BowlingCenter.Views"
        xmlns:local="clr-namespace:BowlingCenter"
        mc:Ignorable="d"
        Title="Logowanie BowlingCenter" Height="450" Width="800"
        MinWidth="800" MinHeight="600" MaxWidth="1680" MaxHeight="1050">
    <Window.Resources>
        <DataTemplate x:Name="AdministratorViewTemplate" DataType="{x:Type viewmodels:AdministratorViewModel}">
            <views:AdministratorView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#474747">

        <ContentControl Content="{Binding}"/>

        <Button Content="LOGIN" Click ="LoginButton_Click"  VerticalAlignment="Top" HorizontalAlignment="Center" Height="70" Width="168" FontSize="30" Margin="0,374,0,0" Background="#FFA4A4A4" FontFamily="Bahnschrift SemiBold SemiCondensed" FontStyle="Italic" FontWeight="Bold"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="username" VerticalAlignment="Top" Width="300" FontSize="30" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,167,0,0" FontFamily="Bahnschrift" Background="#FF656565" OpacityMask="Black" BorderBrush="{x:Null}" Height="52">
            <TextBox.Foreground>
                <SolidColorBrush Color="Black" Opacity="0.7"/>
            </TextBox.Foreground>
        </TextBox>
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="password" VerticalAlignment="Center" Width="300" FontSize="30" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Bahnschrift" Background="#FF656565" BorderBrush="{x:Null}" Height="52">
            <TextBox.Foreground>
                <SolidColorBrush Color="Black" Opacity="0.7"/>
            </TextBox.Foreground>
        </TextBox>
    </Grid>
</Window>
